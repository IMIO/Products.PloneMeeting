<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="PloneMeeting">

  <body>

  <metal:fill fill-slot="main">

    <h1 class="documentFirstHeading" tal:content="python: view.getCurrentMeetingConfig().Title()">Title</h1>
    <form id="itemTemplatesForm" method="post"
          tal:attributes="action python:context.absolute_url() + '/@@createitemfromtemplate'">
    <i align="center" i18n:translate="choose_item_template"></i><br/><br/>
    <tal:templateItems repeat="templateItem view/getTemplateItems">
      <input type="radio" class="noborder" name="templateItem"
             tal:define="isStart repeat/templateItem/start;"
             tal:attributes="id templateItem/id;
                             value templateItem/id;
                             checked python: isStart and True or default;"/>
      <label tal:attributes="for templateItem/id" tal:content="templateItem/Title"></label><br/>
    </tal:templateItems><br />
    <div align="center">
      <input type="hidden" name="form.HTTP_REFERER" value="#" tal:attributes="value context/REQUEST/HTTP_REFERER" />
      <input type="submit" name="form.buttons.save" class="context" value="create_meeting_item" i18n:attributes="value" />
      <input type="submit" name="form.buttons.cancel" class="standalone" value="Cancel" i18n:attributes="value" i18n:domain="plone" />
    </div>
    </form>

  </metal:fill>
  </body>
</html>