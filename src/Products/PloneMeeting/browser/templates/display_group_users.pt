<div id="content" class="group_members_tooltipster" i18n:domain="PloneMeeting">
    <tal:loop repeat="group view/groups">
        <h5><span i18n:domain="plone" i18n:translate="heading_group_members_of">Members of group <span style="font-style: italic;"
                                                                             i18n:name="groupname"
                                                                             tal:content="python: view.group_title(group)">group title</span>
        </span>
        <acronym tal:condition="python: view.tool.isManager(context, realManagers=True)"><a target='_parent'
               tal:attributes="href string:${view/portal_url}/@@usergroup-groupmembership?groupname=${group/getId}">
                <img width="16" height="16" style="width: 16px; height: 16px;" tal:attributes="src string:${view/portal_url}/group.png" title="View linked Plone groups" i18n:attributes="title" />
            </a>
        </acronym>
        </h5>
        <tal:users define="users python: view.group_users(group)">
            <span tal:condition="users"
                  tal:content="structure users"
                  class="users"></span>
            <span class="no_users"
                  tal:condition="not:users"
                  i18n:domain="PloneMeeting"
                  i18n:translate="no_users_in_group">No user was found in this group.</span>
        </tal:users>
    </tal:loop>
</div>
