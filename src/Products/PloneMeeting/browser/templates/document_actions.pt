<table i18n:domain="plone" tal:condition="view/actions" cellspacing="0" cellpadding="0" align="right"
       class="hsActions">
  <tr tal:define="portal_url python: context.portal_url.getPortalObject().absolute_url()">
    <td tal:repeat="daction view/actions">&nbsp;
      <a tal:define="title daction/title;
                     icon daction/icon"
         tal:attributes="href daction/url" tal:condition="icon">
        <img i18n:attributes="title"
             tal:attributes="src python: portal_url + '/' + icon;
                             id python: 'document-action-' + daction['id'].lower();
                             title title; alt title;" />
      </a>
    </td>
  </tr>
</table>
