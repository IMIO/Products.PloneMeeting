<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="PloneMeeting">
<body>

<dl class="portlet portletWidgetCollection"
    tal:define="tool python: view.tool;
                cfg python: view.cfg;
                meetingFolder view/getPloneMeetingFolder;
                portal_url view/portal_url;">

    <dt class="portletHeader">
        <span tal:content="cfg/Title">MeetingConfig title</span>
        <div class="portletPloneMeetingHeaderIcons">
            <a style="display: inline;"
               class="fa fa-home"
               href="#"
               tal:attributes="href meetingFolder/searches_items/absolute_url;
                               title cfg/getName">
            </a>
            <a style="display: inline;"
               class="fa fa-cog"
               tal:condition="python: tool.isManager(view.context)"
               href="#"
               title="pm_configuration" i18n:attributes="title"
               tal:attributes="href cfg/absolute_url">
            </a>
            <a style="display: inline;"
               class="fa fa-user"
               tal:condition="tool/getEnableUserPreferences"
               href="#"
               title="user_preferences" i18n:attributes="title"
               tal:attributes="href string:${cfg/absolute_url}/gotoPreferences;">
            </a>
        </div>
    </dt>

    <dd class="portletItem odd">
      <div class="widget-portlet">
        <tal:block replace="structure view/widget_render" />
      </div>
    </dd>
</dl>
</body>
</html>
