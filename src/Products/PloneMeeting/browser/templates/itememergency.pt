<tal:defines define="selectableEmergencies python: view.listSelectableEmergencies().items();
                     currentEmergency context/getEmergency;">
    <span class="#"
          onclick="javascript:toggleMenu('item_emergency')"
          tal:attributes="class python: selectableEmergencies and ('item_%s Editable' % currentEmergency) or ('item_%s' % currentEmergency)"
          tal:content="python: context.displayValue(context.listEmergencies(), currentEmergency)">Emergency</span>
    <span class="discreet"> â€” <a href="item-emergency-history" class="link-overlay-pm" i18n:translate="" i18n:domain="plone">History</a></span>
    <div id="pm_menu_item_emergency"
         name="pm_menu_item_emergency"
         class="pmDropdown"
         tal:condition="selectableEmergencies">
        <div style="clear: left;" tal:repeat="emergency python: selectableEmergencies">
            <tal:block tal:condition="python: emergency[0] != currentEmergency">
                <img style="float: left; padding-right: 0.3em;"
                     src="blue_arrow.gif"
                     tal:attributes="src string:${view/portal_url}/blue_arrow.gif"/>
                <a href="#"
                   tal:attributes="href python: '%s/@@item_emergency_change_form?new_emergency_value=%s'
                                   % (context.absolute_url(), emergency[0]);
                                   class python: 'link-overlay-pm item_%s' % emergency[0]"
                   tal:content="python: emergency[1]">Emergency</a>
            </tal:block>
        </div>
        <div style="text-align: right;" onclick="javascript:toggleMenu('item_emergency')">
            <img style="bottom: -13px; position: absolute; right: -13px; cursor: pointer;"
                 src="pb_close_small.png"
                 tal:attributes="src string:${view/portal_url}/pb_close_small.png"/>
        </div>
    </div>
</tal:defines>
