  </script>

  <tal:comment replace="nothing">Form for importing several meetings at once.</tal:comment>
  <form name='importManyElements' method="post">
    <input type='hidden' name='elementType'/>
    <input type='hidden' name='masterUrls'/>
    <input type='hidden' name='configUrl'/>
    <input type='hidden' name='configId'/>
  </form>

    <tal:comment replace="nothing">Summary of the data about this external application</tal:comment>
    <fieldset>
      <legend i18n:translate="default" i18n:domain="plone"></legend>
      <table width="100%" class="discreet">
        <tr valign="top">
          <td width="33%" tal:define="field python:here.getField('usages')">
            <span metal:use-macro="here/widgets/field/macros/view" /></td>
          <td width="34%" tal:define="field python:here.getField('notifyUrl')">
            <span metal:use-macro="here/widgets/field/macros/view" /></td>
          <td width="33%" tal:define="field python:here.getField('notifyEmail')">
            <span metal:use-macro="here/widgets/field/macros/view" /></td>
        </tr>
        <tr valign="top">
          <td tal:define="field python:here.getField('notifyProxy')">
            <span metal:use-macro="here/widgets/field/macros/view" /></td>
          <td tal:define="field python:here.getField('notifyLogin')">
            <span metal:use-macro="here/widgets/field/macros/view" /></td>
          <td tal:define="field python:here.getField('notifyProtocol')">
            <span metal:use-macro="here/widgets/field/macros/view" /></td>
        </tr>
        <tr valign="top">
          <td tal:define="field python:here.getField('notifyEvents')">
            <span metal:use-macro="here/widgets/field/macros/view" /></td>
          <td tal:define="field python:here.getField('secondUrl')">
            <span metal:use-macro="here/widgets/field/macros/view" /></td>
          <td tal:define="field python:here.getField('notifyCondition')">
            <span metal:use-macro="here/widgets/field/macros/view" /></td>
        </tr>
        <tr valign="top">
          <td tal:define="field python:here.getField('deferredMeetingImport')">
            <span metal:use-macro="here/widgets/field/macros/view" /></td>
          <td></td>
          <td></td>
        </tr>
      </table>
    </fieldset>

   <tal:comment replace="nothing">Buttons for triggering actions on this external application</tal:comment>
   <br/><form tal:define="usages context/getUsages">
     <input tal:condition="python: 'notify' in usages" i18n:attributes="value"
            class="context" type="submit" name="davsend_test" value="send_test_request_external_app"/>
     <input tal:condition="python: 'export' in usages" i18n:attributes="value"
            class="context" type="submit" name="localget_meetings" value="localget_meetings"/>
     <input tal:condition="python: 'import' in usages" i18n:attributes="value"
            class="context" type="submit" name="davsync_tool" value="davsync_tool"/>&nbsp;
     <input tal:condition="python: 'import' in usages" i18n:attributes="value"
            class="context" type="submit" name="davget_groups" value="davget_groups"/>&nbsp;
     <input tal:condition="python: ('import' in usages) and tool.objectIds('MeetingGroup')"
            class="context" type="submit" name="davget_meetings" value="davget_meetings" i18n:attributes="value"/>
     <input tal:condition="python: ('users' in usages)" i18n:attributes="value"
            class="context" type="submit" name="davsync_users" value="davsync_users"/>
   </form><br />

   <tal:comment replace="nothing">Message after triggering a notification test message</tal:comment>
   <tal:notify condition="request/davsend_test|nothing">
     <fieldset tal:define="msg context/notifyExternalApplication" tal:condition="msg">
       <legend tal:content="msg"></legend>
     </fieldset>
   </tal:notify>

   <tal:comment replace="nothing">Archived meetings on a PloneMeeting master</tal:comment>
   <tal:showMeetings define="mustShowMeetings request/davget_meetings|nothing" condition="mustShowMeetings">
     <fieldset tal:define="meetingInfo context/listArchivedMeetings;
                           success python: meetingInfo[0];
                           response python: meetingInfo[1]">
       <legend i18n:translate="searchallmeetings"></legend>
       <p tal:condition="not: success" tal:content="structure response"></p>
       <tal:theTable condition="success">
       <table class="vertical listing" width="100%">
         <tr>
           <th><img tal:attributes="src string:$portal_url/eye.png" style="cursor:pointer"
                    title="show_hide_imported_meetings" i18n:attributes="title"
                    onClick="javascript:toggleViewableMeetings()" align="left"/>
               <span i18n:translate="listingheader_title"></span>
            </th>
           <th i18n:translate="MeetingConfig"></th>
           <th i18n:translate="heading_actions"></th>
           <th width="20px"><img tal:attributes="src string: $portal_url/select_items.png"
                    onClick="javascript:toggleCheckboxes()" style="cursor:pointer"/>
           </th>
         </tr>
         <tal:meetings repeat="meeting response">
         <tr tal:define="toImport python: meeting['status'] == 'to_import'"
             tal:attributes="id python:test(toImport, 'notImportedMeeting', 'importedMeeting');
                             name python:test(toImport, 'notImportedMeeting', 'importedMeeting');
                             style python:test(toImport, 'display:table-row', 'display:none')">
           <td><span tal:content="meeting/title"></span>
               <span tal:condition="not: toImport">(
                 <span style="color:red;" tal:content="python: 'meeting_%s' % meeting['status']"
                       i18n:translate=""></span> )</span></td>
           <td tal:content="meeting/configTitle"></td>
           <td>
             <form>
               <input type="hidden" name="meetingUrl" tal:attributes="value meeting/url"/>
               <input type="hidden" name="configUrl" tal:attributes="value meeting/configUrl"/>
               <input type="hidden" name="configId" tal:attributes="value meeting/configId"/>
               <input tal:condition="toImport" type="submit" name="davimport_meeting"
                      class="context" value="davimport_meeting" i18n:attributes="value"/>
             </form>
           </td>
           <td align="center">
             <input type="checkbox" checked="checked" class="noborder" name="masterUrl"
                    tal:condition="toImport" tal:attributes="value meeting/url"/>
           </td>
         </tr>
         </tal:meetings>
         <tr tal:condition="python: not meetingInfo[1]"><td colspan="4" i18n:translate="no_meeting"></td></tr>
       </table>
       <p align="right"><br/>
         <input type="button" name="davimport_manymeetings" value="davimport_selected" i18n:attributes="value"
                tal:condition="python: meetingInfo[1]"
                tal:attributes="onClick python: 'javascript:importManyMeetings(\'%s\', \'%s\')' % (meetingInfo[1][0]['configUrl'], meetingInfo[1][0]['configId'])"/>
       </p>
       </tal:theTable>
     </fieldset>
   </tal:showMeetings>

   <tal:comment replace="nothing">Archived meetings on the current site</tal:comment>
   <tal:showLocalMeetings define="mustShowMeetings request/localget_meetings|nothing" condition="mustShowMeetings">
     <fieldset tal:define="meetingBrains python: context.portal_catalog(meta_type='Meeting', review_state='archived', sort_on='created')">
       <legend i18n:translate="searchallmeetings"></legend>
       <table class="vertical listing" width="100%">
         <tr>
           <th i18n:translate="Meeting"></th>
           <th i18n:translate="MeetingConfig"></th>
           <th i18n:translate="heading_actions"></th>
           <th width="20px"><img tal:attributes="src string: $portal_url/select_items.png"
                    onClick="javascript:toggleCheckboxes()" style="cursor:pointer"/>
           </th>
         </tr>
         <tr tal:repeat="meetingBrain meetingBrains">
           <td tal:content="meetingBrain/Title"></td>
           <td tal:content="python: meetingBrain.portal_type[7:]"></td>
           <td>
             <form>
               <input type="hidden" name="meetingUid" tal:attributes="value meetingBrain/UID"/>
               <input class="context" type="submit" name="davexport_meeting" value="davexport_meeting" i18n:attributes="value"/>
             </form>
           </td>
           <td align="center"><input type="checkbox" checked="checked" class="noborder" name="masterUrl"/></td>
         </tr>
         <tr tal:condition="python: not meetingBrains"><td colspan="4" i18n:translate="no_meeting"></td></tr>
       </table>
       <p align="right"><br/>
         <input type="button" name="davexport_manymeetings" value="davexport_selected" i18n:attributes="value"
                tal:attributes="onClick python: 'javascript:exportManyMeetings()'"/>
       </p>
     </fieldset>
   </tal:showLocalMeetings>

   <tal:comment replace="nothing">Groups on a PloneMeeting master</tal:comment>
   <tal:showGroups define="mustShowGroups request/davget_groups|nothing" condition="mustShowGroups">
     <fieldset tal:define="groupInfo context/listMeetingGroups;
                           success python: groupInfo[0];
                           response python: groupInfo[1]">
       <legend i18n:translate="meeting_groups"></legend>
       <p tal:condition="not: success" tal:content="structure response"></p>
       <tal:theTable condition="success">
       <table class="vertical listing" width="100%">
         <tr>
           <th i18n:translate="listingheader_title"></th>
           <th i18n:translate="plonemeeting_identifier"></th>
           <th i18n:translate="PloneMeeting_label_acronym"></th>
           <th i18n:translate="group_is_active"></th>
           <th i18n:translate="heading_actions"></th>
           <th width="20px"><img tal:attributes="src string: $portal_url/select_items.png"
                    onClick="javascript:toggleCheckboxes()" style="cursor:pointer"/>
           </th>
         </tr>
         <tr tal:repeat="group response">
           <td tal:content="python: group[0]"></td>
           <td tal:content="python: group[1]"></td>
           <td tal:content="python: group[2]"></td>
           <td tal:content="python: test(group[3]==True, 'Yes', 'No')"
               i18n:translate="" i18n:domain="plone"></td>
           <td>
             <form>
               <input type="hidden" name="groupUrl" tal:attributes="value python: group[4]"/>
               <input class="context" type="submit" name="davimport_group" value="davimport_meeting" i18n:attributes="value"/>
             </form>
           </td>
           <td align="center"><input type="checkbox" checked="checked" class="noborder" name="masterUrl"
                      tal:attributes="value python: group[4]"/></td>
         </tr>
         <tr tal:condition="python: not groupInfo[1]"><td colspan="6" i18n:translate="no_meeting_group"></td></tr>
       </table>
       <p align="right"><br/>
         <input type="button" name="davimport_manygroups" value="davimport_selected" i18n:attributes="value"
                onClick="javascript:importManyGroups()"/>
       </p>
       </tal:theTable>
     </fieldset>
   </tal:showGroups>

   <tal:comment replace="nothing">Trigger an action if required</tal:comment>
   <tal:action define="elementType request/elementType|nothing">
     <!-- Sync the tool -->
     <p align="center" class="portalMessage" tal:condition="request/davsync_tool|nothing"
        tal:content="structure context/importTool"/>
     <!-- Import a group -->
     <p align="center" class="portalMessage" tal:condition="request/davimport_group|nothing"
        tal:content="structure context/importMeetingGroup"/>
     <!-- Import many groups -->
     <p align="center" class="portalMessage" tal:condition="python:elementType == 'group'"
        tal:content="structure context/importMeetingGroups"/>
     <!-- Import a meeting -->
     <p align="center" class="portalMessage" tal:condition="request/davimport_meeting|nothing"
        tal:content="structure context/importArchivedMeeting"/>
     <!-- Import many meetings -->
     <p align="center" class="portalMessage" tal:condition="python:elementType == 'meeting'"
        tal:content="structure context/importArchivedMeetings"/>
     <!-- Export a meeting -->
     <p align="center" class="portalMessage" tal:condition="request/davexport_meeting|nothing"
        tal:content="structure context/exportArchivedMeeting"/>
     <!-- Sync users -->
     <p align="center" class="portalMessage" tal:condition="request/davsync_users|nothing"
        tal:content="structure context/importUsers"/>
   </tal:action>
   <div metal:use-macro="here/hs_macros/macros/showTransitions"></div> 
  </div>
 </body>
</html>
