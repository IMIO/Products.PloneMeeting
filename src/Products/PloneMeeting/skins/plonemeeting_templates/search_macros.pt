<select metal:define-macro="categories"
        name="categories" multiple="multiple" size="7">
  <tal:options repeat="category context/getCategories">
    <option tal:define="name category/getName"
            tal:attributes="value category/id; title name"
            tal:content="python: context.truncate(name, 45)">
    </option>
  </tal:options>
</select>

<select metal:define-macro="classifiers"
        name="classifiers" multiple="multiple" size="7">
  <tal:options repeat="classifier python: context.getCategories(classifiers=True)">
  <option tal:define="name classifier/getName"
          tal:attributes="value classifier/UID; title name"
          tal:content="python: context.truncate(name, 45)">
  </option>
  </tal:options>
</select>
