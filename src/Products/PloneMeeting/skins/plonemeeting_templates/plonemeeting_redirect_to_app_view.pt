<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

  <body>
  <metal:title fill-slot="content-title">
   <tal:comment replace="nothing">Just hide the title as shown by default by Plone</tal:comment>
  </metal:title>
  <metal:description fill-slot="content-description">
   <tal:comment replace="nothing">Just hide the description as shown by default by Plone</tal:comment>
  </metal:description>
  
  <metal:fill fill-slot="content-core">
     <metal:main_macro define-macro="body">
       <tal:block tal:define="defaultMeetingConfig python: context.portal_plonemeeting.getDefaultMeetingConfig()"
                  tal:condition="python: user.getId() and defaultMeetingConfig and context.portal_plonemeeting.getPloneMeetingFolder(defaultMeetingConfig.getId()).portal_type != 'Plone Site'">
         <span metal:use-macro="here/hs_macros/macros/hsRedirect"/>
       </tal:block>
       <span metal:use-macro="here/hs_macros/macros/hsWelcome"/>

     </metal:main_macro>
  </metal:fill>
  </body>
</html>
